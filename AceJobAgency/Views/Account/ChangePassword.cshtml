@model AceJobAgency.ViewModels.ChangePasswordViewModel

@{
    ViewData["Title"] = "Change Password";
}

<div class="apple-form-container">
    <h1>Change your password</h1>
    <p class="subtitle">
        Choose a strong password to keep your account secure.
    </p>

    <form asp-action="ChangePassword" method="post">
        @Html.AntiForgeryToken()

        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

        <div class="apple-form-group">
            <label asp-for="CurrentPassword"></label>
            <input asp-for="CurrentPassword"
                   type="password"
                   class="form-control apple-input" />
            <span asp-validation-for="CurrentPassword" class="text-danger"></span>
        </div>

        <div class="apple-form-group">
            <label asp-for="NewPassword"></label>
            <input asp-for="NewPassword"
                   type="password"
                   class="form-control apple-input"
                   id="Password" />
            <span asp-validation-for="NewPassword" class="text-danger"></span>

            <div class="password-rules" id="passwordRules">
                <p>Password must contain:</p>
                <ul>
                    <li id="rule-length">At least 12 characters</li>
                    <li id="rule-upper">One uppercase letter</li>
                    <li id="rule-lower">One lowercase letter</li>
                    <li id="rule-number">One number</li>
                    <li id="rule-special">One special character</li>
                </ul>
            </div>
        </div>

        <div class="apple-form-group">
            <label asp-for="ConfirmPassword"></label>
            <input asp-for="ConfirmPassword"
                   type="password"
                   class="form-control apple-input" />
            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
        </div>

        <button type="submit" class="btn apple-button w-100 mt-3">
            Update Password
        </button>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />

    <script>
        const passwordInput = document.getElementById("Password");

        if (passwordInput) {
            passwordInput.addEventListener("input", function () {
                const value = passwordInput.value;

                toggle("rule-length", value.length >= 12);
                toggle("rule-upper", /[A-Z]/.test(value));
                toggle("rule-lower", /[a-z]/.test(value));
                toggle("rule-number", /\d/.test(value));
                toggle("rule-special", /[^a-zA-Z0-9]/.test(value));
            });
        }

        function toggle(id, isValid) {
            const el = document.getElementById(id);
            if (!el) return;
            el.style.color = isValid ? "green" : "red";
        }
    </script>
}
