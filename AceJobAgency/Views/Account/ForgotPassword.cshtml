@model AceJobAgency.ViewModels.ForgotPasswordViewModel

@{
    ViewData["Title"] = "Forgot Password";
    ViewData["HideNavbar"] = true;
}

<div class="apple-form-container">
    <h1>Forgot your password?</h1>
    <p class="subtitle">
        Enter your email and we’ll send you a reset link.
    </p>

    <form asp-action="ForgotPassword" method="post">
        @Html.AntiForgeryToken()

        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

        <div class="apple-form-group">
            <label asp-for="Email"></label>
            <input asp-for="Email" class="form-control apple-input" />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>

        <button type="submit" class="btn apple-button w-100 mt-3">
            Send Reset Link
        </button>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
